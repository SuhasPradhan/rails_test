<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<nav class="navbar navbar-inverse">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <a class="container navbar-brand" style="margin-bottom: 26px;"><%= image_tag("logo2.png", :alt => "logo", :class => "img-responsive logo") %>
	      </a>
	    </div>
	  </div>
	</nav>

<div class="container-fluid">

	<% if (current_user.id == @event.owner_id) %>
	<%=form_for :event,url: event_edit_path(@event),method: :put do |f|%>
		<p>
	    <%= f.label :Event %><br />
	    <%= f.text_field :eventname %>
		</p>
	  <p>
	    <%= f.label :Venue %><br />
	    <%= f.text_field :venue %>
		</p>
		<p>
			<%= f.label :Date%><br />
			<%= f.text_field :date %>
		</p>
		<p>
			<%= f.label :Time %><br />
			<%= f.text_field :time %>
		</p>
		<p>
			<%= f.label :Invitees %><br />	
			<ul>
				<% @users.each do |role| %>
				<li>
					<%= check_box_tag 'invitee_ids[]', role.id -%>
					<%= role.username -%>
				</li>
				<% end %>
			</ul>
		</p>
		<p>
			<%= f.label :Description %><br />
			<%= f.text_area :description %>
		</p>
		<p>
			<%= f.label :Status %><br />
			<%= f.select :status, ['open', 'closed']%></br></br></br>
		</p>


		<p class="btn"><%= f.submit :Save %></p>
		<p class="btn"><%= f.submit :Reset %></p>
	<% end %>
	<% else %>

	<%=form_for :event,url: event_edit_path(@event),method: :put do |f|%>
		<p>
	    <%= f.label :Event %><br />
	    <%= f.text_field :eventname, disabled: true %>
		</p>
	  <p>
	    <%= f.label :Venue %><br />
	    <%= f.text_field :venue, :disabled => true %>
		</p>
		<p>
			<%= f.label :Date%><br />
			<%= f.text_field :date, disabled: true %>
		</p>
		<p>
			<%= f.label :Time %><br />
			<%= f.text_field :time, :disabled => true %>
		</p>
		<p>
			<%= f.label :Invitees %><br />	
			<ul>
				<% @users.each do |role| %>
				<li>
					<%= check_box_tag 'invitee_ids[]', role.id -%>
					<%= role.username -%>
				</li>
				<% end %>
			</ul>
		</p>
		<p>
			<%= f.label :Description %><br />
			<%= f.text_area :description, :disabled => true %>
		</p>
		<p>
			<%= f.label :Status %><br />
			<%= f.select :status, ['open', 'closed'], :disabled => true %></br></br></br>
		</p>


		<p class="btn"><%= f.submit :Save, :disabled => true %></p>
		<p class="btn"><%= f.submit :Reset, :disabled => true %></p>
	<% end %>	
	<% end %>

</div>





</body>
</html>