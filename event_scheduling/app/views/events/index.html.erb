<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>

	<nav class="navbar navbar-inverse">
  <div class="container-fluid">
  <div class="row">
    <div class="navbar-header col-xs-6">

      <a class="container navbar-brand" style="margin-bottom: 25px;"><%= image_tag("logo2.png", :alt => "logo", :class => "img-responsive logo") %>
      </a>
    </div>
    
    <ul class="nav navbar-nav navbar-right col-xs-6">
      <!-- <li class="siglog"><h3><button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#signup">Sign Up</button></h3></li> -->
       <li style="float: right;"><%= button_to "log out",user_logout_path,:class => "btn btn-md btn-success logout",method: :get%></li>
       <li style="float: right;"><%= button_to current_user.username,user_edit_path,:class => "btn btn-md btn-success logout", method: :get%></li>


      <!-- <li class="siglog"><%= link_to "<button class='btn btn-success btn-lg'>Sign up</button>".html_safe, user_signup_path %></li> -->
    </ul>
  </div>
</nav>

  <div class="row container">  
    <div class="col-xs-4">
      <div class="container-fluid">
        <% @events.each do |event,user| %>    
          <div class="row" style="background-color:#D3D3D3; margin:5px; padding:20px">
            <label style="color:green">Event:</label>

            <label> <%=link_to event.eventname,event_edit_path(event,user)%></label><br>

            <label style="color:green">Description: </label>
            <label><%= event.description %></label><br>



            <label style="color:green">Organiser: </label>
            <label><% a=event.owner_id %>
                        <% s=User.find_by_id(a) %>
                        <%= s.username %></label>        
            <div class="container">
              <!-- Trigger the modal with a button -->
              <a  data-toggle="modal" data-target="#myModal2-<%=event.id%>">Invitees</a> 
              <!-- Modal -->
              <div class="modal fade" id="myModal2-<%=event.id%>" role="dialog">
                <div class="modal-dialog">

                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">List of Invitees</h4>
                    </div>
                    <div class="modal-body">
                    
                      <% event.invitations.each do |b| %>
                        <% a=b.invitee_id %>
                        <% s=User.find_by_id(a) %>
                        <%= s.username %><br>
                      <% end %>
                      
                    </div>

                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  
    <div class="col-xs-8">
  	  <div class="container-fluid" style="float: right;">
        <%= button_to "create new event",event_create_path,:class => "btn btn-md btn-success eventbutton",method: :get%>
      </div>
    </div> 
  </div>   
</body>
</html>