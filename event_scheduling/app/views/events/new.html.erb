<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>

	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="container navbar-brand" style="margin-bottom: 26px;"><%= image_tag("logo2.png", :alt => "logo", :class => "img-responsive logo") %>
				</a>
			</div>
		</div>
	</nav>
	<div class="container-fluid">
		<%= form_for :event,url: event_create_path do |f| %>
		
		<p>
			<%= f.label :Event %><br />
			<%= f.text_field :eventname %>
		</p>
		<p>
			<%= f.label :Venue %><br />
			<%= f.text_field :venue %>
		</p>
		<p>
			<%= f.label :Date%><br />
			<%= f.text_field :date %>
		</p>
		<p>
			<%= f.label :Time %><br />
			<%= f.text_field :time %>
		</p>
		<p>
			<%= f.label :Invitees %><br />	
			<ul>
				<% @users.each do |role| %>
				<li>
					<%= check_box_tag 'invitee_ids[]', role.id -%>
					<%= role.username -%>
				</li>
				<% end %>
			</ul>
		</p>
		<p>
			<%= f.label :Description %><br />
			<%= f.text_area :description %>
		</p>
		<p>
			<%= f.label :Status %><br />
			<%= f.select :status, ['open', 'closed']%></br></br></br>
		</p>
		
		
		<p class="button"><%= f.submit :Save %></p>
		<p class="button"><%= f.submit :Reset %></p>
		<% end %>
	</div>

</body>
</html>